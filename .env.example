# Server
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# Frontend
FRONTEND_URL=http://localhost:5173
FRONTEND_URLS=http://localhost:5173
FRONTEND_ORIGINS=http://localhost:5173
PUBLIC_FORM_BASE_URL=http://localhost:5173

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/crm_db

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_SECRET=your-super-secret-refresh-token-key-change-this
REFRESH_TOKEN_EXPIRES_IN=7d

# CSRF
CSRF_SECRET=your-super-secret-csrf-key-change-this

# Cookies
COOKIE_SECRET=your-super-secret-cookie-key-change-this
COOKIE_DOMAIN=
SECURE_COOKIES=false

# Email (nodemailer)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-password
SMTP_FROM=noreply@example.com
SMTP_FROM_NAME=CRM Platform

# Security
ALLOW_BEARER_TOKENS=true
CSP_REPORT_URI=

# Proxies
ALLOWED_HOSTS=localhost,127.0.0.1,example.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=info

# Public Forms API URL (absolute URL to avoid credential leakage)
# Public forms must use this URL without credentials
VITE_API_URL=http://localhost:3000
