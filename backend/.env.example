# Database
DATABASE_URL=postgresql://user:password@localhost:5432/crm_saas

# JWT & Auth
JWT_SECRET=your-secret-key-here-change-in-production-minimum-32-characters
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d
# ALLOW_BEARER_TOKENS: Default false for security.
# Set to true ONLY for non-browser API clients (mobile apps, server-to-server).
# Web browsers MUST use httpOnly cookies. In production, Bearer tokens are rejected
# unless explicitly enabled. This prevents XSS token theft in browser contexts.
ALLOW_BEARER_TOKENS=false

# Server
PORT=5000
NODE_ENV=development

# CORS & URLs
# PRIMARY: Single frontend URL (required)
FRONTEND_URL=http://localhost:3000
# OPTIONAL: Additional frontend origins for multi-environment setup (comma-separated)
# Example for staging + prod: https://staging.myapp.com,https://myapp.com
FRONTEND_ORIGINS=
# NOTE: API_URL removed from CORS allowlist to prevent credential leakage
# Only frontend origins are allowed for browser requests with credentials
API_URL=http://localhost:5000

# Cookies
# Leave empty for host-only cookies (most secure for single domain)
# Set to .yourdomain.com for subdomain sharing (e.g., app.myapp.com and www.myapp.com)
# WARNING: Subdomain cookies accessible across all subdomains - use carefully
# Examples:
#   Single domain (recommended): COOKIE_DOMAIN=
#   Subdomain sharing: COOKIE_DOMAIN=.myapp.com
COOKIE_DOMAIN=

# Security
CSP_REPORT_URI=

# Logging
LOG_LEVEL=info

# Email Configuration (Optional - emails will be logged to console if not configured)
