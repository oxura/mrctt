# Database
DATABASE_URL=postgresql://user:password@localhost:5432/crm_saas

# JWT & Auth
JWT_SECRET=your-secret-key-here-change-in-production-minimum-32-characters
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d
# Set to true only for API-only clients. SPAs should use cookies.
ALLOW_BEARER_TOKENS=false

# Server
PORT=5000
NODE_ENV=development

# CORS & URLs
# Add multiple frontend URLs for different environments (dev, staging, prod)
FRONTEND_URL=http://localhost:3000
# Optional: API URL for CSP and CORS
API_URL=http://localhost:5000

# Cookies
# Leave empty for single domain dev, set to .yourdomain.com for production with subdomains
# Example: .myapp.com allows cookies for app.myapp.com and api.myapp.com
COOKIE_DOMAIN=

# Security
CSP_REPORT_URI=

# Logging
LOG_LEVEL=info

# Email Configuration (Optional - emails will be logged to console if not configured)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_SECURE=false
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASSWORD=your-app-password
# EMAIL_FROM_ADDRESS=noreply@yourapp.com
# EMAIL_FROM_NAME=Экосистема заявок
